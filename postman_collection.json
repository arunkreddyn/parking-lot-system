{
  "info": {
    "name": "Parking Lot System API",
    "_postman_id": "parking-lot-system",
    "description": "Postman collection for Parking Lot System (User & Admin endpoints, JWT Bearer token required)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin: Add Parking Lot",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Central Parking\",\n  \"location\": \"Downtown\"\n}"
        },
        "url": { "raw": "http://localhost:8080/api/admin/lots", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api","admin","lots"] }
      }
    },
    {
      "name": "Admin: Add Slot",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/admin/lots/1/slots?type=CAR&floor=1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","admin","lots","1","slots"],
          "query": [
            { "key": "type", "value": "CAR" },
            { "key": "floor", "value": "1" }
          ]
        }
      }
    },
    {
      "name": "Admin: Remove Slot",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8080/api/admin/slots/1", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api","admin","slots","1"] }
      }
    },
    {
      "name": "Admin: Add Pricing Rule",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"vehicleType\": \"CAR\",\n  \"hourlyRate\": 50\n}"
        },
        "url": { "raw": "http://localhost:8080/api/admin/pricing", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api","admin","pricing"] }
      }
    },
    {
      "name": "Admin: Get All Parking Lots",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8080/api/admin/lots", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api","admin","lots"] }
      }
    },
    {
      "name": "User: Park Vehicle (Entry)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"plateNo\": \"KA01AB1234\",\n  \"type\": \"CAR\",\n  \"ownerEmail\": \"user@example.com\",\n  \"lotId\": 1\n}"
        },
        "url": { "raw": "http://localhost:8080/api/user/entry", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api","user","entry"] }
      }
    },
    {
      "name": "User: Retrieve Vehicle (Exit)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8080/api/user/exit/1", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api","user","exit","1"] }
      }
    },
    {
      "name": "User: Get Active Ticket",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8080/api/user/tickets/KA01AB1234", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api","user","tickets","KA01AB1234"] }
      }
    },
    {
      "name": "User: Get Payment Receipt",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": { "raw": "http://localhost:8080/api/user/payments/1", "protocol": "http", "host": ["localhost"], "port": "8080", "path": ["api","user","payments","1"] }
      }
    }
  ],
  "variable": [
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ]
}
